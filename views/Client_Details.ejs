    <form method="POST" action="/clients">
      <ul style="margin-bottom:20px;" class="btn">
        <input type="text" name="value" value="<%=read1.image%>" style="display: none;">
        <button type="submit" name="form" value="edit" style="margin-right: 5px;">Update</button>
        <button type="submit" name="form" value="delete" style="margin-left: 5px;">Delete</button>
      </ul>
    </form>
    <table class="table table-bordered table-hover table-hover-cells">
      <h2 class="page-header">Client EMI'S Details</h2>
      <thead>
        <tr>
          <th>#</th>
          <th>Month</th>
          <th>Amount</th>
          <th>Receiving Date</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <form class="form" method="POST" action="/clientdetails">
        <%var i=0%>
        <%read.forEach(function(row){ %>
        <%i++%>
        <tr>
          <th scope="row"><%=i%></th>
          <td><%=row.month%></td>
          <td><%=row.amount%></td>
          <td><%=row.rdate%></td>
          <td><button class="ebn" type="submit" name="demi" value="<%=row._id %> "><i class="fa fa-trash t" aria-hidden="true"></i></button></td>
        </tr>
        <% }) %>
      </form>
      </tbody>
    
    </table>

    <h2 class="page-header">Add Receiveing EMI</h2>
    <form class="form" method="POST" action="/clientdetails">
      <input type="text" name="button" id="button" style="display: none;">
      <input type="text" name="amount" placeholder="Amount" required id="amount">
      <input type="date" name="rdate" placeholder="Receiveing Date" required>
      <button type="submit" class="submit btn">ADD</button>
    </form>
