  <script>
    $(document).ready(function(){
      $(window).scroll(function(){
        if( $(window).scrollTop()==0){
            $('nav img').removeClass("headerlogo2");
            $('nav img').addClass('headerlogo1');
          }
        else if( $(window).scrollTop()>80){
          $('nav img').removeClass("headerlogo1");
            $('nav img').addClass('headerlogo2');
