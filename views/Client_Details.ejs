    <h2 class="page-header">Clients Details</h2>
    <!-- Table hover + Table hover cell -->
    <div class="row">
      <div class="col-sm-5">
        <img class="center" src="/clients_images/<%=read1.image%>" alt="">
      </div>
      <div class="col-sm-6">
        <table class="table">
